#!/bin/sh

config=Config.mak
rm -f ${config}

sname=`uname -s`
test $? -eq 0 || exit 1
os=""
suffix=""
case "$sname" in
	Linux|linux)
		os=linux
		gl_libs="-lGL -lGLU"
		math_libs="-lm"
        png_libs=$(libpng-config --libs);
        os_libs=
		;;
	Darwin)
		os=osx
		gl_libs="-lGL"
		math_libs="-lm"
		;;
	MINGW*)
		os=win32
		suffix=.exe
		gl_libs="-lopengl32 -lGLU32"
		math_libs=""
        png_libs=-lz $(libpng-config --libs);
        os_libs=
		;;
	*)
		echo "Unsupported OS: $sname"
		exit 1
esac
echo "Detected kernel: $os"
echo "SUFFIX := ${suffix}" >> ${config}
echo "OS := ${os}" >> ${config}

sdl_ver=`sdl-config --version`
test $? -eq 0 || (echo "SDL not found"; exit 1)

echo "SDL version: ${sdl_ver}"
echo SDL_CFLAGS := `sdl-config --cflags` >> ${config}
echo SDL_LIBS := `sdl-config --libs` >> ${config}

echo "GL_LIBS := ${gl_libs}" >> ${config}

echo "MATH_LIBS := ${math_libs}" >> ${config}

echo "PNG_LIBS := ${png_libs}" >> ${config}

echo "OS_LIBS := ${os_libs}" >> ${config}

